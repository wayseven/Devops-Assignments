@{
    ViewData["Title"] = "Results";
}
@model List<ConversionViewModel>

<div>
    <h1 class="display-4">Results</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">JSON</th>
                <th scope="col">XML</th>
                <th scope="col">Conversion date</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var conversion in Model)
            {
                if (conversion.Success)
                {
                    <tr class="table-success">
                        <th scope="row">@conversion.Id</th>
                        <td>@conversion.Input</td>
                        <td>@conversion.Output</td>
                        <td>@conversion.CreatedAt</td>
                    </tr>

                }
                else
                {
                    <tr class="table-danger">
                        <th scope="row">@conversion.Id</th>
                        <td>@conversion.Input</td>
                        <td>@conversion.Output</td>
                        <td>@conversion.CreatedAt</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
